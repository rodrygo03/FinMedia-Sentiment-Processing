# Qdrant Configuration
# Copy this file to .env and fill in your actual values

# Qdrant Cloud or Self-hosted Instance
QDRANT_URL=https://your-qdrant-cluster.qdrant.io
QDRANT_API_KEY=your-api-key-here

# Local Qdrant Instance (alternative)
# QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=

# Collection Configuration
QDRANT_COLLECTION_NAME=finmedia_events
QDRANT_VECTOR_SIZE=768

# Performance Settings
QDRANT_TIMEOUT_SECONDS=30
QDRANT_MAX_RETRIES=3
QDRANT_BATCH_SIZE=100


# Model Path (run python script first to create file)
FINBERT_ENABLED=true
FINBERT_MODEL_PATH=../inference/FinBERT/finbert_config.json